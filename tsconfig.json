{
  "compilerOptions": {
    "baseUrl": ".",
    "paths" : {
      "~/*" : ["./src/*"],
      "@/*" : ["./src/*"],
      "pp-selector" : ["src/index.ts"]
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es6",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "removeComments": false,
    "sourceMap": true,
    "target": "es2017",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "jsx": "react",
    "allowJs": true
  },

  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}